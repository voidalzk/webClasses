/*
exercício 2
function criadorTabuleiro (lin, col) {
  let tabuleiro = ""
      for (i = 0; i < lin; i++) {
        for (j = 0; j < col; j++) {
          if((i + j) % 2 == 0) {
              tabuleiro += "#";
          } else {
              tabuleiro += " ";
          }
        }
        tabuleiro += "\n";
      }
      return tabuleiro;
}
 
console.log(criadorTabuleiro(10, 10))
*/

