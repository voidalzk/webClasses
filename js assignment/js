/*
exercício 4
function reverse(array) {
  const div = Math.floor(array.length / 2);
  for (var i = 0; i < div; i++) {
    const tmp = array[i];
    array[i] = array[array.length - 1 - i];
    array[array.length - 1 - i] = tmp;
  }

  return array;
}

var a = [1, 2, 3];
console.log(reverse(a));
*/

/*
exercício 5
function contaLetras(string, letra) {
  var contador = 0;
  var letraEncontrada
  for (let i = 0; i <= string.length; i++) {
    if (string[i] === letra) {
      contador++
      letraEncontrada = contador
    }
  }
    return letraEncontrada;
 }
var s = "Aula de web1"
console.log(contaLetras(s, "e"));
*/

/*
exercício 6
function procuraSubStr(string, trecho) {
  var posicao = 0;
  for (; posicao <= string.length - trecho.length; posicao++) {
    let encontrou = true;
    for (var i = 0; i < trecho.length; i++) {
      if (string[posicao + i] !== trecho[i]) {
        encontrou = false;
        break;
      }
    }
    if (encontrou) {
      return posicao;
    }
  }
  return -1;
}

var s = "Aula de web1";
console.log(procuraSubStr(s, "web1"));
console.log(procuraSubStr(s, "web2"));
*/


